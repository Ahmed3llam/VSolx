@model List<Category>
@{
    ViewData["Title"] = "Index";
    int x = 1;
    Layout = "_Layout";
} 
    <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th>Id</th>
            <th>Title</th>
            <th>----</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var c in Model)
            {
                <tr>
                    <td>@x</td>
                    @{
                        x++;
                    }
                    <td>@c.Title</td>
                    <td> 
                        <a class="btn btn-outline-primary" href="Category/Update/@c.Id">update</a>
                        <a class="btn btn-outline-danger" href="Category/delete/@c.Id" onclick="return confirm('Do you want to delete this Category?')">delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-outline-primary" href="Category/Create">Create new Category</a>
@*</body>
</html>*@

