@model User
@{
    Layout = "_Pro";
}
<style>
    table{
    width: 110%;
    text-align: center;
    margin-top:-40vh;
    box-shadow: 0px 0px 30px 0px rgba(115, 0, 255, 0.5);
    border-radius:10px;
}
table th{
    text-transform: uppercase;
    color: rgb(206, 206, 206);
}
th,td{
    padding: 5px;
    color: rgb(165, 165, 165);
}
</style>
<div class="container">
          <div class="holder">
            <div class="list">
              <div class="name">
                Select
              </div>
              <ul>
                <li>Name<span> @Model.fname  @Model.lname</span></li>
                <li>Email<span> @Model.Email</span></li>
                <li>Address<span> @Model.Address</span></li>
                <li>Phone<span> @Model.Phone</span></li>
                <li>Gender<span> @Model.Gender</span></li>
                <li><a href="/User/Update/@Model.Id" >Update</a><span> if you need to update your data</span></li>
                <li><a href="/User/Delete/@Model.Id" onclick="return confirm('Do you want to delete your Email?')">Delete</a><span> if you want to delete your Email</span></li>
              </ul>
              <!--<div id="image"><img src="images/b2.png" alt="" /></div>-->
            </div>
            <div class="preview"><br>
              <section class="services" id="services">
                <div id="orangeStar" class="str1"></div>
                <div id="purpleStar" class="str2"></div>
                <div id="purpleStar" class="str3"></div>
                <div id="orangeStar" class="str4"></div>
                <div class="top">
                    <h1 class="special-heading">cart</h1>
                     <p>
                         Reviews And Detail About your cart
                     </p>
                </div>
                <div class="container">
                    <div class="table">
                    <table>
                        <thead>
                            <th> product name</th>
                            <th> product count</th>
                            <th> total price</th>
                            <th>info</th>
                        </thead>
                        <tbody>
                        @foreach (var product in Model.cart)
                        {
                            <tr>
                                <td>@product.product.Title</td>
                                <td>@product.Count</td>
                                <td>@product.Tprice</td>
                                <td>
                                    <a href="/Cart/Update/@product.Id" class="card-link">update </a>
                                    <a href="/Product/Delete/@product.Id" onclick="return confirm('Do you want to delete this element?')" class="card-link">delete</a>
                                </td>
                            </tr>                            
                        }
                        </tbody>
                    </table>
      </div>
        
      </div>
            </section>
            </div>
          </div>
        </div>
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}


