@model Cart
@{
    Layout = "_Log";
}
<div class="list">
    <div class="name">
       Select
    </div>
    <ul>
        <li>Show<span>Show product</span></li>
        <li>Create<span>create product</span></li>
    </ul>
</div>
<div class="preview"><br /><br /><br /><br />
    <h2 class="main-title" id="title">Update-Cart</h2><br /><br /><br />
    <div id="log" class="row">
        <form asp-action="Update" asp-controller="Cart" method="post">
              <div class="input">
                  <input asp-for="Count" placeholder="count" type="number"/><br />
              </div>
              <input type="submit" class="btn" value="update Cart" /><br />
        </form>
    </div>
</div>
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}


