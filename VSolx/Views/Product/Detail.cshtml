@model VSolx.View_Model.Detail
@{
    Layout = "_Pro";
}
<style>
    .preview{
        width:100px;
    }
    .list{
        width:350px;
    }
    .list .top{
        margin:25px;
    }
    .preview .container{
        margin-top:-5vh;
    }
    table{
    width: 70%;
    text-align: center;
    
    box-shadow: 0px 0px 30px 0px rgba(115, 0, 255, 0.5);
    border-radius:10px;
}
table th{
    text-transform: uppercase;
    color: rgb(206, 206, 206);
}
img{
    width:80%;
    height:80%;
}
th,td{
    padding: 5px;
    color: rgb(165, 165, 165);
}
 .box {
    box-shadow: 0px 0px 30px 0px rgba(115, 0, 255, 0.5);
    background-image: linear-gradient(45deg, var(--light-bg), var(--dark-bg), var(--light-bg));
    border-radius: 6px;
    overflow: hidden;
    transition: transform var(--main-transition), box-shadow var(--main-transition);
  }
 .box:hover {
    transform: translateY(-10px);
    box-shadow: 0 2px 15px rgb(0 0 0 / 20%);
  }
  
 .box .content {
    padding: 20px;
  }
 .box .content h3 {
    margin: 0;
    color: rgb(206, 206, 206);
  }
 .box .content p {
    margin: 10px 0 0;
    line-height: 1.5;
    color: rgb(165, 165, 165);
  }
 .box .info {
    padding: 20px;
    border-top: 1px solid #e6e6e7;
    display: flex;
    justify-content: space-between;
    align-items: center;
    
  }
 .box .info a {
    color: rgba(74, 3, 161, 0.5);
    font-weight: bold;
    text-decoration: none;
  }
 .box .info a:hover {
    color: var(--grad2-clr-left);
    animation: moving-arrow 0.6s linear infinite;
  }
 .box .info i {
    color: rgba(115, 0, 255, 0.5);
  }
.box .info i {
    animation: moving-arrow 0.6s linear infinite;
  }
   a {
    color: rgba(74, 3, 161, 0.5);
    font-weight: bold;
    text-decoration: none;
  }
a:hover {
    color: var(--grad2-clr-left);
    animation: moving-arrow 0.6s linear infinite;
  }
</style>
<div class="container">
          <div class="holder">
            <div class="list">
                <div class="top">
                    <h1 class="special-heading">Product</h1>
                     <p>
                         Reviews And Detail About this Product
                     </p>
                </div>
              <ul>
                @*<li>Category<span> @Model.Category.Title</span></li>*@
                <li>Title<span> @Model.Product.Title</span></li>
                <li>Body<span> @Model.Product.Body</span></li>
                <li>Price<span> @Model.Product.Price</span></li>
                 @if (Model.Product.UserID == Context.Session.GetInt32("UserId"))
              {
                   <li><a href="/Product/Update/@Model.Product.Id" class="card-link">update</a></li>
                   <li><a href="/Product/Delete/@Model.Product.Id" onclick="return confirm('Do you want to delete this element?')" class="card-link">delete</a></li>
              } 
                   <li><a href="/Product/Cart/@Model.Product.Id">Add To Cart</a></li>
              </ul>
            </div>
            <div class="preview"><br>
              <section class="services" id="services">
                <div id="orangeStar" class="str1"></div>
                <div id="purpleStar" class="str2"></div>
                <div id="purpleStar" class="str3"></div>
                <div id="orangeStar" class="str4"></div>
                <div class="container">
                    <div class="table">
                    <table>
                        <tbody>
                            <tr><img src="@Model.Product.Img" alt="" /></tr>
                            <tr>
                                <div class="top">
                                  <h1 class="special-heading">Comment</h1>
                                  <p>
                                      Reviews About Comments To this Product
                                  </p>
                                </div>
                            </tr>
                            <tr>
                                <h2 id="title"><a href="/Comment/Create/@Model.Product.Id">Add-Comment</a></h2><br />
                            </tr>
                           
                                @foreach(var comment in Model.comments){
                                  <tr>
                                        <div class="box">
                                         <div class="content"> 
                                            @*<P>@Model.User.fname @Model.User.lname</P>*@
                                            <p>@comment.Body</p>
                                            
                                          </div>
                                          @if (Model.Uid == Context.Session.GetInt32("UserId"))
                                          {
                                            <div class="info">
                                               <a href="/Comment/Update/@Model.Comment.Id" class="card-link">update</a>
                                               <i class="fas fa-long-arrow-alt-right"></i>
                                               <a href="/Comment/Delete/@Model.Comment.Id" onclick="return confirm('Do you want to delete this element?')" class="card-link">delete</a>
                                               <i class="fas fa-long-arrow-alt-right"></i>
                
                                            </div>
                                          }
                                        </div> 
                                  </tr>
                                }
                            
                        </tbody>
                    </table>
      </div>
        
      </div>
            </section>
            </div>
          </div>
        </div>
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}


